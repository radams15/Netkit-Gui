#!/usr/bin/perl

use warnings;
use strict;

use lib './lib';

use File::Spec;
use Getopt::Long;

use NetkitGui::Lab;
use NetkitGui::MainWindow;

use Cwd;

our $VERSION = 0.1;

my $lab_dir = &getcwd;
my $num_ttys = 1;
GetOptions (
	'dir=s' => \$lab_dir,
	'ttys=i' => \$num_ttys,
);

$lab_dir = File::Spec->rel2abs($lab_dir);

my $lab = NetkitGui::Lab->new($lab_dir);

if(! $lab->is_started) {
	#print "Lab not started, starting lab!\n";
	$lab->start;
}

my $win = NetkitGui::MainWindow->new($lab, $num_ttys, 0);

$win->run;



=head1 Name

NetkitGui - A GUI for Netkit labs.
 
=head1 DESCRIPTION

Simple GTK+ GUI written in Perl.

Allows for 6 TTYs per machine in tabs.

